{% extends 'base.html.twig' %}

{% block title %}Outing index{% endblock %}

{% block main %}
    <h1>Outing index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>OutingName</th>
                <th>StartDate</th>
                <th>Duration</th>
                <th>RegistrationDeadLine</th>
                <th>MaxParticipants</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for outing in outings %}
            <tr>
                <td>{{ outing.id }}</td>
                <td>{{ outing.outingName }}</td>
                <td>{{ outing.startDate ? outing.startDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ outing.duration }}</td>
                <td>{{ outing.registrationDeadLine ? outing.registrationDeadLine|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ outing.maxParticipants }}</td>
                <td>{{ outing.description }}</td>
                <td>
                    <a href="{{ path('outing_show', {'id': outing.id}) }}">show</a>
                    <a href="{{ path('outing_edit', {'id': outing.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('outing_new') }}">Create new</a>
{% endblock %}
